<h1>New Component</h1>
<form action="/users/{{user.id}}/components" method="POST">
  <div>
    <label for="title">
      Title:
    </label>
    <input type="text" name="title"/>
  </div>
  <div>
    <label for="content">
      Content:
    </label>
    <input type="text" name="content"/>
  </div>
  <div>
    <input type="submit" value="Create Component"/>
  </div>
</form>

